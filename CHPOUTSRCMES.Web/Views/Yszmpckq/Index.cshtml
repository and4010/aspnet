@model CHPOUTSRCMES.Web.ViewModels.YszmpckqViewModel
@{
    ViewBag.Title = "板令對照";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/Yszmpckq.css")" rel="stylesheet" type="text/css" />

@section scripts {
    <script src="~/Scripts/Yszmpckq.js"></script>
    <script src="~/Scripts/moment.js"></script>
    
}
<div class="box box-primary customBody" style="padding:20px;">
    <table style=" border-spacing:20px 5px">
        <tr>
            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    組織
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.SelectedOrganization, Model.OrganizationNameItems, new { @class = "customDropDownList", id = "ddlOrganization", autocomplete = "off" })</td>

            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    加工廠
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.SelectedOspSubinventory, Model.OspSubinventoryNameItems, new { @class = "customDropDownList", id = "ddlOspSubinventory", autocomplete = "off" })</td>
            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    紙別
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.SelectedPstyp, Model.PstypNameItems, new { @class = "customDropDownList", id = "ddlPstyp", autocomplete = "off" })</td>
        </tr>
        <tr>
            <td class="input-lg" colspan="6" style=" text-align: right;">
                <button type="button" id="btnSearch" class="btn btn-primary externalBtn" style="width: 100px;">查詢</button>
            </td>
        </tr>
    </table>

    
</div>
<div class="box box-primary customBody">
    <div class="box-body">
        <div class="row row-std">

            <div class="col-sm-11 col-md-11" style="overflow:auto;margin:20px;">
                <table class="table table-striped table-bordered table-hover dataTable" id="YszmpckqDataTablesBody">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("庫存組織")
                            </th>
                            <th>
                                @Html.DisplayName("庫存組織名稱")
                            </th>
                            <th>
                                @Html.DisplayName("加工廠")
                            </th>
                            <th>
                                @Html.DisplayName("加工廠名稱")
                            </th>
                            <th>
                                @Html.DisplayName("紙別")
                            </th>
                            @*<th>
                                @Html.DisplayName("紙別中文名稱")
                            </th>
                            <th>
                                @Html.DisplayName("紙別英文名稱")
                            </th>*@
                            <th>
                                @Html.DisplayName("基重上限")
                            </th>
                            <th>
                                @Html.DisplayName("基重下限")
                            </th>
                            <th>
                                @Html.DisplayName("令重上限")
                            </th>
                            <th>
                                @Html.DisplayName("令重下限")
                            </th>
                            <th>
                                @Html.DisplayName("包數")
                            </th>
                            <th>
                                @Html.DisplayName("每包張數")
                            </th>
                            <th>
                                @Html.DisplayName("每件令數")
                            </th>
                            <th>
                                @Html.DisplayName("建立人員")
                            </th>
                            <th>
                                @Html.DisplayName("建立日期")
                            </th>
                            <th>
                                @Html.DisplayName("更新人員")
                            </th>
                            <th>
                                @Html.DisplayName("更新日期")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
