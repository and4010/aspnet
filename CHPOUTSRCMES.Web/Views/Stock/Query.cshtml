@model CHPOUTSRCMES.Web.ViewModels.QueryViewModel

@{
    ViewBag.Title = "庫存查詢";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/Scripts/StockQuery.js"></script>
    <script src="~/Scripts/moment.js"></script>
}
<div class="row">
    <div class="col col-md-10 col-md-offset-1">
        <div class="box box-primary" style="padding:10px;">
            <div class="box-header with-border">
                <h3 class="fa fa-caret-right"><i></i>搜尋條件</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm("StockQuery", "Stock", FormMethod.Post, new { @id = "QueryForm", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row row-std">

                        <div class="col-md-1 text-right">
                            <label class="input-lg">倉庫</label>
                        </div>

                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.SubinvenotoryList, Model.SubinvenotoryList, new { @class = "form-control input-lg", id = "SubinvenotoryCode", autocomplete = "off" })
                        </div>

                        <div class="col col-md-2 text-right">
                            <label class="input-lg">捲筒/平版</label>
                        </div>

                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.ItemCategoryList, Model.ItemCategoryList, new { @class = "form-control input-lg", id = "ItemCategory", autocomplete = "off" })
                        </div>

                    </div>

                    <div class="row row-std">

                        <div class="col col-md-1 text-right">
                            <label class="input-lg">儲位</label>
                        </div>

                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.locatorList, Model.locatorList, new { @class = "form-control input-lg", id = "LocatorId", autocomplete = "off" })
                        </div>

                        <div class="col col-md-2 text-right">
                            <label class="input-lg">料號</label>
                        </div>

                        <div class="col-md-2">
                            <input class="form-control input-lg ItemNumber" type="text" id="ItemNumber" tabindex="3" />
                        </div>


                    </div>
                }
            </div>

            <div class="box-footer">
                <div class="row row-mtd">
                    <div class="btn-group col-md-3 col-lg">
                        <button id="btnSearch" class="btn btn-primary externalBtn">查詢</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="box box-primary">
            <div class="box-body" style="overflow:auto;">
                <div class="row row-std">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered dataTable" id="QueryTable">
                            <thead>
                                <tr>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.SubinventoryCode)
                                    </th>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.LocatorId)
                                    </th>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.LocatorSegments)
                                    </th>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.InventoryItemId)
                                    </th>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.ItemNumber)
                                    </th>
                                    <th colspan="4">
                                        @Html.DisplayName("可用量")
                                    </th>
                                    <th colspan="4">
                                        @Html.DisplayName("總庫存量")
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.PrimaryUomCode)
                                    </th>
                                    <th colspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.SecondaryUomCode)
                                    </th>
                                    <th colspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.PrimaryUomCode)
                                    </th>
                                    <th colspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.SecondaryUomCode)
                                    </th>
                                </tr>
                            </thead>

                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
