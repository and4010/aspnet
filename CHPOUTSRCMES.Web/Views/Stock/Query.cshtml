@model CHPOUTSRCMES.Web.ViewModels.StockQuery.QueryViewModel

@{
    ViewBag.Title = "庫存查詢";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/Scripts/StockQuery.js"></script>
    <script src="~/Scripts/moment.js"></script>
}
<div class="customBody row">
    <div class="col col-md-10">
        <div class="box box-primary" style="padding:20px;">
            @using (Html.BeginForm("StockQuery", "Stock", FormMethod.Post, new { @id = "QueryForm", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <table style=" border-spacing:20px 5px">
                    <tr>
                        <td style="text-align: right;">
                            <label style='font-weight:bolder;'>
                                倉庫
                            </label>
                        </td>
                        <td class="input-lg" style='min-width: 100px'>@Html.DropDownListFor(model => model.SubinvenotoryList, Model.SubinvenotoryList, new { id = "SubinvenotoryCode", autocomplete = "off" })</td>
                        <td style="text-align: right;">
                            <label style='font-weight:bolder;'>
                                儲位
                            </label>
                        </td>
                        <td class="input-lg" style='min-width: 100px'>@Html.DropDownListFor(model => model.locatorList, Model.locatorList, new { id = "LocatorId", autocomplete = "off" })</td>
                    </tr>

                    <tr>
                        <td style="text-align: right;">
                            <label style='font-weight:bolder;'>
                                捲筒/平版
                            </label>
                        </td>
                        <td class="input-lg" style='min-width: 100px'>@Html.DropDownListFor(model => model.ItemCategoryList, Model.ItemCategoryList, new { id = "ItemCategory", autocomplete = "off" })</td>
                        <td style="text-align: right;">
                            <label style='font-weight:bolder;'>
                                料號
                            </label>
                        </td>
                        <td class="input-lg">
                            <input class="ItemNumber" type="text" id="ItemNumber" tabindex="3" style="min-width:250px;" />
                        </td>
                    </tr>
                    <tr>
                        <td class="input-lg" colspan="4" style=" text-align: right;">
                            <button type="button" id="btnSearch" class="btn btn-primary externalBtn" style="min-width: 100px;">查詢</button>
                        </td>
                    </tr>
                </table>
            }
        </div>
        <div class="box box-primary">
            <div class="box-body" style="overflow:auto;padding:20px;">
                <div class="row row-std">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered dataTable" id="QueryTable">
                            <thead>
                                <tr>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.SubinventoryCode)
                                    </th>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.LocatorSegments)
                                    </th>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.ItemNumber)
                                    </th>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.ItemCategory)
                                    </th>
                                    <th colspan="2">
                                        @Html.DisplayName("可用量")
                                    </th>
                                    <th colspan="2">
                                        @Html.DisplayName("總庫存量")
                                    </th>
                                </tr>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.PrimaryAvailableQty)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.SecondaryAvailableQty)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.PrimarySumQty)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.SecondarySumQty)
                                    </th>
                                </tr>
                            </thead>

                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
