@model CHPOUTSRCMES.Web.ViewModels.OspRelatedViewModel
@{
    ViewBag.Title = "餘切規格";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/ospRelated.css")" rel="stylesheet" type="text/css" />

@section scripts {

    <script src="~/Scripts/OspRelated.js"></script>
    <script src="~/Scripts/moment.js"></script>

    
}

<div class="row row-std">
    <div class="form-inline">
        <div class="form-group col col-md-4 ui-widget"">
            @Html.LabelFor(model => model.SelectedOrganization, new { @class = "input-lg" })
            @Html.DropDownListFor(model => model.SelectedOrganization, Model.OrganizationNameItems, new { @class = "form-control", id = "ddlOrganization", autocomplete="off" })
        </div>

        <div class="form-group col col-md-4 ui-widget">
            
            @Html.LabelFor(model => model.SelectedInventoryItemNumber, new { @class = "input-lg" })
            @Html.DropDownListFor(model => model.SelectedInventoryItemNumber, Model.InventoryItemNumberItems, new { @class = "form-control", id = "ddlInventoryItem", autocomplete="off"})
            @*<select id ="ddlInventoryItem" name="ddlInventoryItem" class="easyui-combobox" data-options="valueField:'Value',textField:'Text'">
                 <option>1</option>
             </select>*@
               
        </div>
            
         <div class="form-group col col-md-4 ui-widget">
            @Html.LabelFor(model => model.SelectedRelatedItemNumber, new { @class = "input-lg" })
            @Html.DropDownListFor(model => model.SelectedRelatedItemNumber, Model.RelatedItemNumberItems, new { @class = "form-control", id = "ddlRelatedItem", autocomplete="off"})
             @*<select id ="ddlRelatedItem" name="ddlRelatedItem" class="easyui-combobox" data-options="valueField:'Value',textField:'Text'">
                 <option></option>
             </select>*@
                 
        </div>

    </div>
</div>

<div class="row row-std">
    <div class="btn-group col-md-1">
            <button id="btnSearch" class="btn btn-primary externalBtn">查詢</button>
        </div>
    </div>

<div class="row row-std">
    <div class="dataTable_wrapper">
        <div class="col-sm-12 col-md-12">
            <table class="table table-striped table-bordered table-hover" id="OspRelatedDataTablesBody">
                <thead>
                    <tr>  
                        <th>
                            @Html.DisplayName("組成成分料號")
                        </th>
                        <th>
                            @Html.DisplayName("組成成分料號描述")
                        </th>
                        <th>
                            @Html.DisplayName("餘切料號")
                        </th>
                        <th>
                            @Html.DisplayName("餘切料號描述")
                        </th>
                         <th>
                            @Html.DisplayName("建立人員")
                        </th>
                         <th>
                            @Html.DisplayName("建立日期")
                        </th>
                         <th>
                            @Html.DisplayName("更新人員")
                        </th>
                         <th>
                            @Html.DisplayName("更新日期")
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
