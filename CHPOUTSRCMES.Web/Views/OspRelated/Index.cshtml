@model CHPOUTSRCMES.Web.ViewModels.OspRelatedViewModel
@{
    ViewBag.Title = "餘切規格";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/ospRelated.css")" rel="stylesheet" type="text/css" />

@section scripts {

    <script src="~/Scripts/OspRelated.js"></script>
    <script src="~/Scripts/moment.js"></script>

    
}
<div class="box box-primary customBody" style="padding:20px;">
    <table style=" border-spacing:20px 5px">
        <tr>
            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    組織
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.SelectedOrganization, Model.OrganizationNameItems, new { @class = "customDropDownList", id = "ddlOrganization", autocomplete = "off" })</td>

            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    組成成份料號
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.SelectedInventoryItemNumber, Model.InventoryItemNumberItems, new { @class = "customDropDownList", id = "ddlInventoryItem", autocomplete = "off" })</td>
            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    餘切料號
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.SelectedRelatedItemNumber, Model.RelatedItemNumberItems, new { @class = "customDropDownList", id = "ddlRelatedItem", autocomplete = "off" })</td>
        </tr>
        <tr>
            <td class="input-lg" colspan="6" style=" text-align: right;">
                <button type="button" id="btnSearch" class="btn btn-primary externalBtn" style="width: 100px;">查詢</button>
            </td>
        </tr>
    </table>
</div>



<div class="box box-primary customBody">
    <div class="box-body">
        <div class="row row-std">
            <div class="dataTable_wrapper">
                <div class="col-sm-11 col-md-11" style="overflow:auto; margin:20px;">
                    <table class="table table-striped table-bordered table-hover" id="OspRelatedDataTablesBody">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("組成成分料號")
                                </th>
                                <th>
                                    @Html.DisplayName("組成成分料號描述")
                                </th>
                                <th>
                                    @Html.DisplayName("餘切料號")
                                </th>
                                <th>
                                    @Html.DisplayName("餘切料號描述")
                                </th>
                                <th>
                                    @Html.DisplayName("建立人員")
                                </th>
                                <th>
                                    @Html.DisplayName("建立日期")
                                </th>
                                <th>
                                    @Html.DisplayName("更新人員")
                                </th>
                                <th>
                                    @Html.DisplayName("更新日期")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

