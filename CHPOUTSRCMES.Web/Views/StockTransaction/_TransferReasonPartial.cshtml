@model CHPOUTSRCMES.Web.ViewModels.StockTransaction.TransferReasonViewModel

<div class="customBody" style="padding: 15px;">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="fa fa-caret-right box-title">庫存查詢</h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        @*<div class="row col-md-12">
                <h4 class="page-header">庫存查詢</h4>
            </div>*@
        <div class="box-body with-border">
            @*<div id="Top">
                </div>
                <div class="row row-std col-md-12">
                    <input type="button" id="btnSearchStock" value="查詢" class="btn btn-primary" />
                </div>*@
            <table style=" border-spacing:20px 5px">
                <tr>
                    <td style="text-align: right;">
                        @Html.LabelFor(model => model.SelectedSubinventory, new { style = "font-weight:bolder;" })
                    </td>
                    <td class="input-lg">@Html.DropDownListFor(model => model.SelectedSubinventory, Model.SubinventoryItems, new { @class = "customDropDownList", id = "ddlSubinventory", autocomplete = "off" })</td>

                    <td style="text-align: right;">
                        @Html.LabelFor(model => model.SelectedLocator, new { style = "font-weight:bolder;" })
                    </td>
                    <td class="input-lg">@Html.DropDownListFor(model => model.SelectedLocator, Model.LocatorItems, new { @class = "customDropDownList", id = "ddlLocator", autocomplete = "off" })</td>

                    <td style="text-align: right;">
                        <label style='font-weight:bolder;'>
                            料號
                        </label>
                    </td>
                    <td class="input-lg" colspan="3">
                        <input class="customTextBox" type="text" id="txtItemNumber" style="width:250px;" , autocomplete="off" />
                        @*@Html.TextBoxFor(model => model.ItemNumber, new { @class = "form-control customTextBox", id = "txtItemNumber", style = "width:250px;", placeholder = "請輸入料號", autocomplete = "off" })*@
                    </td>
                </tr>

                <tr>
                    <td class="input-lg" colspan="8" style=" text-align: right;">
                        <button type="button" id="btnSearchStock" class="btn btn-primary externalBtn" style="width: 100px;">查詢</button>
                    </td>
                </tr>
            </table>

            <div class="row row-std">
                <div class="col-md-12">
                    <table class="table table-striped table-bordered" id="TransferReasonTable">
                        <thead>
                            <tr>
                                <th rowspan="2" colspan="1"></th>
                                <th rowspan="2" colspan="1">項次</th>
                                <th rowspan="2" colspan="1">倉庫</th>
                                <th rowspan="2" colspan="1">儲位</th>
                                <th rowspan="2" colspan="1">料號</th>
                                <th rowspan="2" colspan="1">條碼號</th>
                                <th rowspan="1" colspan="2">主單位</th>
                                <th rowspan="1" colspan="2">次單位</th>
                                <th rowspan="2" colspan="1">原因</th>
                                <th rowspan="2" colspan="1">備註</th>
                            </tr>
                            <tr>
                                <th>
                                    @Html.DisplayName("數量")
                                </th>
                                <th>
                                    @Html.DisplayName("單位")
                                </th>
                                <th>
                                    @Html.DisplayName("數量")
                                </th>
                                <th>
                                    @Html.DisplayName("單位")
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="fa fa-caret-right box-title">貨故編輯</h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        @*<div class="row col-md-12">
                <h4 class="page-header">貨故編輯</h4>
            </div>*@
        <div class="box-body with-border ">
            <div class="row form-group input-lg">
                <span id="StockId" style="display: none;"></span>
                <div class="form-inline col-md-1 text-right">
                    <label>項次</label>
                </div>
                <div class="form-inline col-md-1">
                    <label id="SUB_ID"></label>
                </div>
                <div class="form-inline col-md-1 text-right">
                    <label>倉庫</label>
                </div>
                <div class="form-inline col-md-1">
                    <label id="TransferReasonSubinventory"></label>
                </div>
                <div class="form-inline col-md-1 text-right">
                    <label>儲位</label>
                </div>
                <div class="form-inline col-md-1">
                    <label id="TransferReasonLocator"></label>
                </div>

            </div>
            <div class="row form-group input-lg">
                <div class="form-inline col-md-1 text-right">
                    <label>料號</label>
                </div>
                <div class="form-inline col-md-2">
                    <label id="TransferReasonItem"></label>
                </div>
                <div class="form-inline col-md-1 text-right">
                    <label>條碼</label>
                </div>
                <div class="form-inline col-md-1">
                    <label id="TransferReasonBarcode"></label>
                </div>
            </div>

            <div class="row form-group input-lg">
                <div class="form-inline col col-md-1 text-right">
                    <label>異常原因</label>
                </div>

                <div class="form-inline col col-md-2">
                    @Html.DropDownListFor(model => model.Reason, Model.ReasonItems, new { @class = "customDropDownList", id = "Reason", autocomplete = "off" })
                </div>

                <div id="TransferLocatorArea" style=" display: none;">
                    <div class="form-inline col col-md-1 text-right">
                        <label>儲位</label>
                    </div>

                    <div class="form-inline col col-md-1">
                        @Html.DropDownListFor(model => model.SelectedLocator, Model.LocatorItems, new { @class = "customDropDownList", id = "TransferLocator", autocomplete = "off" })
                    </div>
                </div>
            </div>


            <div class="row form-group input-lg">

                <div class="form-inline col col-md-1 text-right">
                    <label>備註</label>
                </div>

                <div class="form-inline col col-md-2">
                    @*<input class="customTextBox" type="text" id="txtItemNumber" style="width:250px;" , autocomplete="off" />*@
                    <input id="Note" class="customTextBox" type="text"  autocomplete="off" />
                </div>
            </div>

            <form id="photo_form">
                <div class="row form-group input-lg">

                    <div class="form-inline col col-md-1 text-right">
                        <label>照片上傳</label>
                    </div>

                    <div class="form-inline col-md-5">
                        <input type="file" class="filestyle" id="fileinput" name="file" accept="image/*" data-icon="true" required data-buttonText="選擇照片" multiple>
                    </div>

                    <div class="col-md-6">

                        @*<div class="col-md-6" id="SaveImg">
                                <img class="col-md-6" id="SaveImg" onclick="imgDisplay(this)" src="" alt="" />
                            </div>*@
                        <div class="col-md-6" id="imgBox">
                            <img class="col-md-6" id="img" onclick="imgDisplay(this)"
                                 src="" alt="" />
                        </div>
                    </div>

                </div>
            </form>

            <div class="row col-md-1">
                <div>
                    <button class="btn btn-danger" type="button" id="BtnSave">異動存檔</button>
                </div>
            </div>
        </div>
    </div>
</div>