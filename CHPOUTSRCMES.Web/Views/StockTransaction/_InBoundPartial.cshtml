@model CHPOUTSRCMES.Web.ViewModels.StockTransaction.InBoundViewModel

<div class="customBody" style="padding: 15px;">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="fa fa-caret-right box-title">入庫單產生</h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        
        <div class="box-body with-border">
            <table style=" border-spacing:20px 5px">
                <tr>
                    <td style="text-align: right;">
                        @Html.LabelFor(model => model.SelectedOutOrganization, new { style = "font-weight:bolder;" })
                    </td>
                    <td class="input-lg">@Html.DropDownListFor(model => model.SelectedOutOrganization, Model.OutOrganizationItems, new { @class = "customDropDownList", id = "ddlOutOrganization", autocomplete = "off" })</td>

                    <td style="text-align: right;">
                        @Html.LabelFor(model => model.SelectedOutSubinventory, new { style = "font-weight:bolder;" })
                    </td>
                    <td class="input-lg">@Html.DropDownListFor(model => model.SelectedOutSubinventory, Model.OutSubinventoryItems, new { @class = "customDropDownList", id = "ddlOutSubinventory", autocomplete = "off" })</td>

                    <td id="ddlOutLocatorArea" style="text-align: right; display: none;">
                        @Html.LabelFor(model => model.SelectedOutLocator, new { style = "font-weight:bolder;" })
                    </td>
                    <td id="ddlOutLocatorArea2" class="input-lg" style="display: none;">@Html.DropDownListFor(model => model.SelectedOutLocator, Model.OutLocatorItems, new { @class = "customDropDownList", id = "ddlOutLocator", autocomplete = "off" })</td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        @Html.LabelFor(model => model.SelectedInOrganization, new { style = "font-weight:bolder;" })
                    </td>
                    <td class="input-lg">@Html.DropDownListFor(model => model.SelectedInOrganization, Model.InOrganizationItems, new { @class = "customDropDownList", id = "ddlInOrganization", autocomplete = "off" })</td>

                    <td style="text-align: right;">
                        @Html.LabelFor(model => model.SelectedInSubinventory, new { style = "font-weight:bolder;" })
                    </td>
                    <td class="input-lg">@Html.DropDownListFor(model => model.SelectedInSubinventory, Model.InSubinventoryItems, new { @class = "customDropDownList", id = "ddlInSubinventory", autocomplete = "off" })</td>

                    <td id="ddlInLocatorArea" style="text-align: right; display: none;">
                        @Html.LabelFor(model => model.SelectedInLocator, new { style = "font-weight:bolder;" })
                    </td>
                    <td id="ddlInLocatorArea2" class="input-lg" style="display: none;">@Html.DropDownListFor(model => model.SelectedInLocator, Model.InLocatorItems, new { @class = "customDropDownList", id = "ddlInLocator", autocomplete = "off" })</td>
                </tr>
            </table>


            <div class="row row-std col-md-12 form-inline" id="SHIPMENT_NUMBER_AREA">
                <div class="col-md-8">
                    <label id="TransactionType" class="input-lg">出貨編號</label>
                    @Html.DropDownListFor(model => model.SelectedShipmentNumber, Model.ShipmentNumberItems, new { @class = "customDropDownList", id = "ddlShipmentNumber", autocomplete = "off" })
                    <input class="customTextBox" type="text" id="txtShipmentNumber" style="display: none;" />
                    @Html.CheckBoxFor(model => model.CustomShipmentNumber, new { id = "chkCustomShipmentNumber" })
                    @Html.LabelFor(m => m.CustomShipmentNumber, new { id = "lblCustomShipmentNumber" })
                    <span id="NumberStatus" style="display: none;"></span>
                    <input type="button" id="btnImportFile" value="紙捲匯入" class="btn btn-primary" />
                    <input type="button" id="btnImportFlatFile" value="平張匯入" class="btn btn-primary" />
                    <input type="button" id="btnExampleDownload" value="範例下載" class="btn btn-primary" />
                    <input type="button" id="btnPrintRollPick" value="紙捲入庫單" class="btn btn-primary" />
                    <input type="button" id="btnPrintFlatPick" value="平張入庫單" class="btn btn-primary" />
                    @if (Model.Advanced)
                    {
                        <input type="button" id="btnExampleDownload2" value="期初範例下載" class="btn btn-primary" />
                    }
                    <input type="button" id="btnMultiLable" value="列印全部標籤" class="btn btn-primary" style="display: none;" />
                </div>

            </div>

            <div class="panel panel-default ">
                <div class="panel-heading">
                    <a data-toggle="collapse" data-target="#scrollbox" href="#scrollbox">
                        <h3 class="panel-title">新增入庫單明細</h3>
                    </a>
                </div>
                <div class="panel-body panel-collapse collapse " id="scrollbox">
                    <div id="PickInputArea">
                        <div class="row col-md-12 form-inline input-lg">

                            <label class="text-right font-weight:bolder;" style="width:80px;">料號</label>
                            <span class="">
                                <input class="customTextBox" type="text" id="AutoCompleteItemNumber" style="width:250px;" autocomplete="off" />
                                <span id="PACKING_TYPE_LABEL" style="display: none;">@Html.LabelFor(model => model.PACKING_TYPE)</span>
                                <span id="PACKING_TYPE">@Html.DisplayFor(model => model.PACKING_TYPE)</span>
                            </span>

                        </div>

                        <div id="QtyInputArea">
                            <div class="row col-md-12 form-inline input-lg">

                                <label class="text-right font-weight:bolder;" style="width:80px;">數量</label>
                                <span class="">
                                    <input class="customTextBox" type="text" id="txtInputTransactionQty" style="width:120px;" autocomplete="off" />
                                    <span id="UNIT">@Html.DisplayFor(model => model.Unit)</span>
                                </span>

                            </div>

                            <div class="row col-md-12 form-inline input-lg">
                                <span id="REAM_INPUT_AREA" style="display: none;">
                                    <label class="text-right font-weight:bolder;" style="width:80px;">每棧令數</label>
                                    <span class="">
                                        <input class="customTextBox" type="text" id="txtRollReamWT" style="width:120px;" autocomplete="off" />
                                    </span>
                                </span>
                                <span id="ROLL_INPUT_AREA" style="display: none;">
                                    <label class="text-right font-weight:bolder;" style="width:80px;">捲號</label>
                                    <span class="">
                                        <input class="customTextBox" type="text" id="txtLotNumber" style="width:120px;" autocomplete="off" />
                                    </span>
                                </span>
                                <input type="button" id="btnSaveStockTransferDT" value="產生明細" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="fa fa-caret-right box-title">條碼驗收</h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="box-body with-border">

            <div class="row row-std col-md-12 form-inline input-lg">
                <label class="text-right font-weight:bolder;">條碼</label>
                <input class="customTextBox" type="text" id="txtBARCODE" autocomplete="off" />
                <input type="button" id="btnSaveBarcode" value="轉已入庫" class="btn btn-danger" />
            </div>

            <div class="row row-std col-md-12">
                <input type="button" id="btnSaveTransfer" value="入庫存檔" class="btn btn-danger" />
                @if (Model.Advanced)
                {
                    <input type="button" id="btnSaveTransfer2" value="直接入庫存檔" class="btn btn-danger" />
                }
            </div>

            <div class="row row-sd">
                <div class="dataTable_wrapper">
                    <div class="col-sm-12 col-md-12">
                        <table class="table table-striped table-bordered table-hover" id="InBoundBarcodeDataTablesBody">
                            <thead>
                                <tr>
                                    <th rowspan="2" colspan="1"></th>
                                    <th rowspan="2" colspan="1">項次</th>
                                    <th rowspan="1" colspan="5">商品</th>
                                    <th rowspan="1" colspan="2">主單位</th>
                                    <th rowspan="1" colspan="2">次單位</th>
                                    <th rowspan="2" colspan="1">備註</th>
                                </tr>
                                <tr>

                                    <th>
                                        @Html.DisplayName("條碼號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("入庫狀態")
                                    </th>
                                    <th>
                                        @Html.DisplayName("料號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("捲號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("包裝方式")
                                    </th>

                                    <th>
                                        @Html.DisplayName("數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("單位")
                                    </th>
                                    <th>
                                        @Html.DisplayName("數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("單位")
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
