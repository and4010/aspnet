@model CHPOUTSRCMES.Web.ViewModels.Report.YieldViewModel
@{
    ViewBag.Title = "工單得率報表";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section scripts {
    <script src="~/Scripts/Report/YieldQuery.js"></script>
    <script src="~/Scripts/moment.js"></script>
}

<div class="row">
    <div class="col col-md-10 col-md-offset-1">
        <div class="box box-primary" style="padding:20px;">
            <div class="box-header with-border">
                <h3 class="fa fa-caret-right"><i></i>搜尋條件</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm("YieldQuery", "Report", FormMethod.Post, new { @id = "QueryForm", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row row-std">

                        <div class="col col-md-2 text-right">
                            <label class="input-lg">裁切完工日期(起)</label>
                        </div>

                        <div class="col-md-3 input-lg">
                            <input class="form-control input-lg" type="text" id="dateFrom" tabindex="3" style="min-width:300px;" autocomplete="off" />
                        </div>

                        <div class="col col-md-2 text-right">
                            <label class="input-lg">裁切完工日期(迄)</label>
                        </div>

                        <div class="col-md-3 input-lg">
                            <input class="form-control input-lg" type="text" id="dateTo" tabindex="3" style="min-width:300px;" autocomplete="off" />
                        </div>
                    </div>

                    <div class="row row-std">

                        <div class="col col-md-2 text-right">
                            <label class="input-lg">工單號</label>
                        </div>

                        <div class="col-md-3 input-lg">
                            @*<input class="form-control input-lg Barcode" type="text" id="BatchNo" tabindex="3" style="min-width:300px;" />*@
                            @Html.DropDownListFor(model => model.BatchNo, Model.BathNoList, new { @class = "form-control input-lg", id = "BatchNo", autocomplete = "off" })
                        </div>

                        <div class="col col-md-2 text-right">
                            <label class="input-lg">機台</label>
                        </div>

                        <div class="col-md-3 input-lg">
                            @*  <input class="form-control input-lg Barcode" type="text" id="MachineNum" tabindex="3" style="min-width:300px;" />*@
                            @Html.DropDownListFor(model => model.MachineNum, Model.MachineCodeList, new { @class = "form-control input-lg", id = "MachineNum", autocomplete = "off" })
                        </div>


                    </div>
                }
            </div>

            <div class="box-footer">
                <div class="row row-mtd">
                    <div class="btn-group col-md-3 col-lg">
                        <button id="btnSearch" class="btn btn-primary externalBtn" style="min-width:200px;">查詢</button>
                    </div>
                    <div class="btn-group col-md-3 col-lg">
                        <button id="btnPrint" class="btn btn-primary externalBtn" style="min-width:200px;">匯出報表</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="box box-primary">
            <div class="box-body" style="overflow:auto;padding:20px;">
                <div class="row row-std">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered dataTable" id="QueryTable">
                            <thead>
                                <tr>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.BatchNo)
                                    </th>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.Status)
                                    </th>
                                    <th colspan="2">
                                        @Html.DisplayName("投入")
                                    </th>
                                    <th colspan="3">
                                        @Html.DisplayName("產出")
                                    </th>
                                    <th rowspan="2">
                                        @Html.DisplayNameFor(model => model.Fields.Yield)
                                    </th>
                                </tr>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.DiItemNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.DiQty)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.DoItemNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.DoReQty)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.DiQty)
                                    </th>
                                </tr>
                            </thead>

                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
