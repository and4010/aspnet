@model CHPOUTSRCMES.Web.ViewModels.Report.CutSumViewModel

@{
    ViewBag.Title = "裁切資料匯總報表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/report.css")" rel="stylesheet" type="text/css" />

@section scripts {
    <script src="~/Scripts/Report/CutSumQuery.js"></script>
    <script src="~/Scripts/moment.js"></script>
}
<div class="customBody row row-std">
    <div class="col-md-12">
        <div class="box box-primary" style="padding:10px 20px;">
            @using (Html.BeginForm("CutSumQuery", "Report", FormMethod.Post, new { @id = "QueryForm", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <table style=" border-spacing:20px 5px">
                    <tr>
                        <td style="text-align: right;">
                            <label style='font-weight:bolder;'>
                                計畫開始日期
                            </label>
                        </td>
                        <td class="input-lg" colspan="3">
                            <input class="customTextBox" type="text" id="PlanStartDateFrom" tabindex="3" style="width:100px;" autocomplete="off" />
                            ~
                            <input class="customTextBox" type="text" id="PlanStartDateTo" tabindex="3" style="width:100px;" autocomplete="off" />
                        </td>
                        <td style="text-align: right;">
                            <label style='font-weight:bolder;'>
                                工單號
                            </label>
                        </td>
                        <td class="input-lg">
                            <input class="customTextBox" type="text" id="BatchNo" tabindex="3" style="width:140px;" autocomplete="off" />
                        </td>
                        <td style="text-align: right;">
                            <label style='font-weight:bolder;'>
                                紙別
                            </label>
                        </td>
                        <td class="input-lg">
                            <input class="customTextBox" type="text" id="PaperType" tabindex="3" style="width:100px;" autocomplete="off" />
                        </td>
                    </tr>
                    <tr>
                        <td class="input-lg" colspan="8" style=" text-align: right;">
                            <button type="button" id="btnPrint" class="btn btn-primary externalBtn" style="width: 100px;">匯出報表</button>
                        </td>
                    </tr>
                </table>
            }
        </div>
        <div id="ReportPartial">
            @Html.Partial("_ReportPartial")
        </div>
    </div>
</div>
