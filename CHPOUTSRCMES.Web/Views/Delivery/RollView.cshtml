@model CHPOUTSRCMES.Web.ViewModels.Delivery.PaperRollViewModel
@{
    ViewBag.Title = "紙捲明細";
    ViewBag.EnableReturnButton = "true";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {

    <script src="~/Scripts/Delivery/PaperRollView.js"></script>

}

<div>
    @Html.Partial("_DeliveryPartial", @Model.DeliveryDetailViewHeader)
</div>

<div class="form-group col col-md-12 input-lg">
    @Html.Label("紙捲需求")
</div>

<div class="row row-std">
    <div class="dataTable_wrapper">
        <div class="col-sm-12 col-md-12">
            <table class="table table-striped table-bordered table-hover" id="PaperRollDataTablesBody">
                <thead>
                    <tr>
                        <th rowspan="2" colspan="1">項次</th>
                        <th rowspan="1" colspan="2">訂單</th>
                        <th rowspan="1" colspan="6">商品</th>
                        <th rowspan="1" colspan="3">主單位</th>
                        <th rowspan="1" colspan="3">交易單位</th>
                        @*<th rowspan="2" colspan="1">備註</th>*@
                    </tr>

                    <tr>


                        <th>
                            @Html.DisplayName("訂單")
                        </th>
                        <th>
                            @Html.DisplayName("訂單行號")
                        </th>
                        <th>
                            @Html.DisplayName("工單號碼")
                        </th>
                         <th>
                            @Html.DisplayName("代紙料號")
                        </th>
                        <th>
                            @Html.DisplayName("料號")
                        </th>
                        <th>
                            @Html.DisplayName("紙別")
                        </th>
                        <th>
                            @Html.DisplayName("基重")
                        </th>
                        <th>
                            @Html.DisplayName("規格")
                        </th>
                        <th>
                            @Html.DisplayName("需求數量")
                        </th>
                        <th>
                            @Html.DisplayName("已揀數量")
                        </th>
                        <th>
                            @Html.DisplayName("單位")
                        </th>
                        <th>
                            @Html.DisplayName("需求數量")
                        </th>
                        <th>
                            @Html.DisplayName("已揀數量")
                        </th>
                        <th>
                            @Html.DisplayName("單位")
                        </th>

                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="form-group col col-md-12 input-lg">
    @Html.Label("揀貨(刷條碼)")
</div>

<div class="row row-std">
    <div class="dataTable_wrapper">
        <div class="col-sm-12 col-md-12">
            <table class="table table-striped table-bordered table-hover" id="PaperRollBarcodeDataTablesBody">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("項次")
                        </th>
                        <th>
                            @Html.DisplayName("料號")
                        </th>
                        <th>
                            @Html.DisplayName("條碼號")
                        </th>
                        <th>
                            @Html.DisplayName("數量")
                        </th>
                        <th>
                            @Html.DisplayName("單位")
                        </th>
                        <th>
                            @Html.DisplayName("備註")
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
