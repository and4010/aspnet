@model CHPOUTSRCMES.Web.ViewModels.Delivery.PaperRollEditViewModel
@{
    ViewBag.Title = "紙捲明細輸入";
    ViewBag.EnableReturnButton = "true";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section scripts {

    <script src="~/Scripts/Delivery/PaperRollEdit.js"></script>
    <script src="~/Scripts/label.js"></script>
    <script src="~/Scripts/Delivery/DetailViewHeader.js"></script>
}

<div class="customBody" style="padding: 15px;">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="fa fa-caret-right box-title">單號明細</h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body with-border">
            <div id="DeliveryPartial">
                @Html.Partial("_DeliveryPartial", @Model.DeliveryDetailViewHeader)
            </div>
        </div>
        <div class="box-footer with-border form-inline">
            <div class="form-group form-inline">
                <label class="text-right font-weight:bolder;">交運單號</label>
                @Html.TextBoxFor(model => model.DELIVERY_NAME, new { @class = "customTextBox", id = "txtDeliveryName", autocomplete = "off" })
                <input type="button" id="btnCheckDeliveryName" value="比對" class="btn btn-success" />
            </div>

        </div>
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            @Html.Label("紙捲需求", new { @class = "fa fa-caret-right box-title" })
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="box-body with-border" style="overflow-y:auto">
            <div class="row row-std">
                <div class="dataTable_wrapper">
                    <div class="col-sm-12 col-md-12">
                        <table class="table table-striped table-bordered table-hover" id="PaperRollDataTablesBody">
                            <thead>
                                <tr role="row" class="bg-light-gray">
                                    <th rowspan="2" colspan="1"></th>
                                    <th rowspan="2" colspan="1">項次</th>
                                    <th rowspan="1" colspan="2">訂單</th>
                                    <th rowspan="1" colspan="6">商品</th>
                                    <th rowspan="1" colspan="3">主單位</th>
                                    <th rowspan="1" colspan="3">交易單位</th>
                                    @*<th rowspan="2" colspan="1">備註</th>*@
                                </tr>
                                <tr role="row" class="bg-light-gray">


                                    <th>
                                        @Html.DisplayName("訂單")
                                    </th>
                                    <th>
                                        @Html.DisplayName("訂單行號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("工單號碼")
                                    </th>
                                    <th>
                                        @Html.DisplayName("代紙料號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("料號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("紙別")
                                    </th>
                                    <th>
                                        @Html.DisplayName("基重")
                                    </th>
                                    <th>
                                        @Html.DisplayName("規格")
                                    </th>
                                    <th>
                                        @Html.DisplayName("需求數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("已揀數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("單位")
                                    </th>
                                    <th>
                                        @Html.DisplayName("需求數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("已揀數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("單位")
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            @Html.Label("揀貨(刷條碼)", new { @class = "fa fa-caret-right box-title" })
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body with-border">
            <div class="row row-std">

                @*<div class="form-inline ">*@
                <div class="col-md-12">
                    <div style="display: none">
                        <span id="DLV_DETAIL_ID"></span>
                    </div>
                    <div class="form-group col col-md-2 input-lg">
                        @Html.LabelFor(model => model.SUB_ID, new { @class = "input-lg" })
                        <span id="SUB_ID">@Html.DisplayFor(model => model.SUB_ID)</span>
                    </div>
                    <div class="form-group col col-md-3 input-lg">
                        @Html.LabelFor(model => model.ORDER_NUMBER, new { @class = "input-lg" })
                        <span id="ORDER_NUMBER">@Html.DisplayFor(model => model.ORDER_NUMBER)</span>
                    </div>
                    <div class="form-group col col-md-3 input-lg">
                        @Html.LabelFor(model => model.ORDER_SHIP_NUMBER, new { @class = "input-lg" })
                        <span id="ORDER_SHIP_NUMBER">@Html.DisplayFor(model => model.ORDER_SHIP_NUMBER)</span>
                    </div>
                    <div style="display: none">
                        <span id="INVENTORY_ITEM_ID"></span>
                    </div>
                    <div style="display: none">
                        <span id="PICK_STATUS"></span>
                    </div>
                    <div style="display: none">
                        <span id="SRC_REQUESTED_QUANTITY_UOM"></span>
                    </div>
                    <div class="form-group col col-md-4 input-lg">
                        @Html.LabelFor(model => model.ITEM_NUMBER, new { @class = "input-lg" })
                        <span id="ITEM_NUMBER">@Html.DisplayFor(model => model.ITEM_NUMBER)</span>
                    </div>

                </div>



                <div class="col-md-12">
                    <form class="form-inline" id="form" onsubmit="return false">
                        @*<div class=" input-group col-md-3">*@
                        <div class="form-group form-inline">
                            <label class="text-right font-weight:bolder;">條碼</label>
                            @*<span class="input-group-addon" style="width:53px;">條碼</span>*@
                            @Html.TextBoxFor(model => model.BARCODE, new { @class = "customTextBox", id = "txtBARCODE", aria_describedby = "txtBARCODE-addon", autocomplete = "off" })
                        </div>


                        <input type="button" id="btnSaveBarcode" value="新增" class="btn btn-danger form-control" />

                    </form>

                </div>


                @* <div class="col-md-12">
                    <form class="form-inline">
                         <div class="input-group col-md-3" style="width:53px;">
                             <span class="input-group-addon">條碼</span>
                             @Html.TextBoxFor(model => model.BARCODE, new { @class = "form-control", placeholder = "請輸入條碼", id = "txtBARCODE", aria_describedby = "txtBARCODE-addon" })
                         </div>
                     </form>

                     <button id="btnSaveBarcode" class="btn btn-danger">新增</button>
                         </div>*@

                @*  <div class="form-group col col-md-4 input-lg">
                        @Html.LabelFor(model => model.BARCODE, new { @class = "input-lg" })
                        @Html.TextBoxFor(model => model.BARCODE, new { @class = "form-control input-sm", id = "txtBARCODE", aria_describedby = "txtBARCODE-addon" })
                    </div>*@


                @*        <div class="btn-group col col-md-2 input-lg">
                        <button id="btnSaveBarcode" class="btn btn-danger externalBtn">新增</button>
                    </div>*@

                @*</div>*@
            </div>

            <br />
            <div class="row row-std">
                <div class="dataTable_wrapper">
                    <div class="col-sm-12 col-md-12">
                        <table class="table table-striped table-bordered table-hover" id="PaperRollBarcodeDataTablesBody">
                            <thead>
                                <tr role="row" class="bg-light-gray">
                                    <th></th>
                                    <th>
                                        @Html.DisplayName("項次")
                                    </th>
                                    <th>
                                        @Html.DisplayName("料號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("條碼號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("單位")
                                    </th>
                                    @*<th>
                                            @Html.DisplayName("備註")
                                        </th>*@
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>