@model CHPOUTSRCMES.Web.ViewModels.Delivery.DeliverySearchViewModel
@{
    ViewBag.Title = "出貨作業";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/Delivery/index.css")" rel="stylesheet" type="text/css" />

@section scripts {

    <script src="~/Scripts/Delivery/index.js"></script>
    <script src="~/Scripts/moment.js"></script>
}
<div class="box box-primary customBody" style="padding: 10px 20px;">
     
        <div style="display: none">
            <span id="Advanced">@Html.DisplayFor(model => model.Advanced)</span>
        </div>

        <table style=" border-spacing:20px 5px">
            <tr>
                <td style="text-align: right;">
                    @Html.LabelFor(model => model.TripActualShipBeginDate, new { style = "font-weight:bolder;" })
                </td>
                <td class="input-lg" colspan="3">
                    @Html.TextBoxFor(model => model.TripActualShipBeginDate, new { @class = "customTextBox", id = "txtTripActualShipBeginDate", style = "width:100px;", autocomplete = "off" })
                    ~
                    @Html.TextBoxFor(model => model.TripActualShipEndDate, new { @class = "customTextBox", id = "txtTripActualShipEndDate", style = "width:100px;", autocomplete = "off" })
                </td>

                <td style="text-align: right;">
                    @Html.LabelFor(model => model.DeliveryName, new { style = "font-weight:bolder;" })
                </td>
                <td class="input-lg">
                    @Html.TextBoxFor(model => model.DeliveryName, new { @class = "customTextBox", id = "txtDeliveryName", style = "width:150px;", autocomplete = "off" })
                </td>

                <td style="text-align: right;">
                    @Html.LabelFor(model => model.SelectedSubinventory, new { style = "font-weight:bolder;" })
                </td>
                <td class="input-lg">@Html.DropDownListFor(model => model.SelectedSubinventory, Model.SubinventoryNameItems, new { @class = "customDropDownList", id = "ddlWarehouse", autocomplete = "off" })</td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    @Html.LabelFor(model => model.TransactionDate, new { style = "font-weight:bolder;" })
                </td>
                <td class="input-lg" colspan="3">
                    @Html.TextBoxFor(model => model.TransactionDate, new { @class = "customTextBox", id = "txtTransactionDate", style = "width:100px;", autocomplete = "off" })
                </td>

                <td style="text-align: right;">
                    @Html.LabelFor(model => model.SelectedTrip, new { style = "font-weight:bolder;" })
                </td>
                <td class="input-lg">@Html.DropDownListFor(model => model.SelectedTrip, Model.TripNameItems, new { @class = "customDropDownList", id = "ddlTrip", autocomplete = "off" })</td>

                <td style="text-align: right;">
                    @Html.LabelFor(model => model.SelectedDeliveryStatus, new { style = "font-weight:bolder;" })
                </td>
                <td class="input-lg">@Html.DropDownListFor(model => model.SelectedDeliveryStatus, Model.DeliveryStatusItems, new { @class = "customDropDownList", id = "ddlDeliveryStatus", autocomplete = "off" })</td>
            </tr>
            <tr>
                <td class="input-lg" colspan="8" style=" text-align: right;">
                    <button type="button" id="btnSearch" class="btn btn-primary externalBtn" style="width: 100px;">查詢</button>
                </td>
            </tr>
        </table>
    </div>

<div class="box box-primary customBody" style="padding: 15px; overflow-y:auto">
    <div class="row row-std">
        
    </div>

    <div class="row row-std">
        <div class="col-sm-12 col-md-12">
            <table class="table table-striped table-bordered table-hover display nowrap" id="TripDataTablesBody">
                <thead>
                    <tr role="row" class="bg-light-gray">
                        <th></th>
                        <th></th>
                        <th rowspan="1" colspan="1">項次</th>
                        <th rowspan="1" colspan="1">內銷地區別</th>
                        <th rowspan="1" colspan="1">車次</th>
                        <th rowspan="1" colspan="1">航程號</th>
                        <th rowspan="1" colspan="1">交運單</th>
                        <th rowspan="1" colspan="1">作業別</th>
                        <th rowspan="1" colspan="1">狀態</th>
                        <th rowspan="1" colspan="1">客戶</th>
                        <th rowspan="1" colspan="1">出庫倉庫</th>
                        <th rowspan="1" colspan="1">總重量</th>
                        <th rowspan="1" colspan="1">單位</th>
                        <th rowspan="1" colspan="1">總令數</th>
                        <th rowspan="1" colspan="1">單位</th>
                        <th rowspan="1" colspan="1">備註</th>
                        <th rowspan="1" colspan="1">送貨客戶名稱</th>
                        <th rowspan="1" colspan="1">組車日</th>
                        <th rowspan="1" colspan="1">出貨申請日</th>
                        <th rowspan="1" colspan="1">出貨核准日</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>



