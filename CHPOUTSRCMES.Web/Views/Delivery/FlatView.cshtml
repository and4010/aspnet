@model CHPOUTSRCMES.Web.ViewModels.Delivery.FlatViewModel
@{
    ViewBag.Title = "平張明細";
    ViewBag.EnableReturnButton = "true";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {

    <script src="~/Scripts/Delivery/FlatView.js"></script>

}

<div style="padding: 15px;">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="fa fa-caret-right box-title">單號明細</h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body with-border">
            <div id="DeliveryPartial">
                @Html.Partial("_DeliveryPartial", @Model.DeliveryDetailViewHeader)
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            @Html.Label("平張需求", new { @class = "fa fa-caret-right box-title" })
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body with-border" style="overflow-y:auto">
            <div class="row row-std">
                <div class="dataTable_wrapper">
                    <div class="col-sm-12 col-md-12">
                        <table class="table table-striped table-bordered table-hover dataTable" id="FlatDataTablesBody">
                            <thead>
                                <tr role="row" class="bg-light-gray">
                                    @*<th rowspan="2" colspan="1"></th>*@
                                    <th rowspan="2" colspan="1">項次</th>
                                    <th rowspan="1" colspan="2">訂單</th>
                                    <th rowspan="1" colspan="5">商品</th>
                                    <th rowspan="1" colspan="3">主單位</th>
                                    <th rowspan="1" colspan="3">次單位</th>
                                    <th rowspan="1" colspan="3">交易單位</th>
                                    @*<th rowspan="2" colspan="1">備註</th>*@
                                </tr>
                                <tr role="row" class="bg-light-gray">

                                    <th>
                                        @Html.DisplayName("訂單")
                                    </th>
                                    <th>
                                        @Html.DisplayName("訂單行號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("工單號碼")
                                    </th>
                                    <th>
                                        @Html.DisplayName("代紙料號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("料號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("令重")
                                    </th>
                                    <th>
                                        @Html.DisplayName("包裝方式")
                                    </th>
                                    <th>
                                        @Html.DisplayName("需求數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("已揀數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("單位")
                                    </th>
                                    <th>
                                        @Html.DisplayName("需求數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("已揀數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("單位")
                                    </th>
                                    <th>
                                        @Html.DisplayName("需求數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("已揀數量")
                                    </th>
                                    <th>
                                        @Html.DisplayName("單位")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            @Html.Label("揀貨(刷條碼)", new { @class = "fa fa-caret-right box-title" })
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body with-border">
            <div class="row row-std">
                <div class="col-sm-12 col-md-12">
                    <table class="table table-striped table-bordered table-hover dataTable" id="FlatBarcodeDataTablesBody">
                        <thead>
                            <tr role="row" class="bg-light-gray">
                                <th>
                                    @Html.DisplayName("項次")
                                </th>
                                <th>
                                    @Html.DisplayName("條碼號")
                                </th>
                                <th>
                                    @Html.DisplayName("料號")
                                </th>
                                <th>
                                    @Html.DisplayName("令重")
                                </th>
                                <th>
                                    @Html.DisplayName("包裝方式")
                                </th>
                                <th>
                                    @Html.DisplayName("數量")
                                </th>
                                <th>
                                    @Html.DisplayName("單位")
                                </th>
                                <th>
                                    @Html.DisplayName("數量")
                                </th>
                                <th>
                                    @Html.DisplayName("單位")
                                </th>
                                @*<th>
                                        @Html.DisplayName("備註")
                                    </th>*@
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
