@model CHPOUTSRCMES.Web.ViewModels.MachinePaperTypeViewModel
@{
    ViewBag.Title = "機台紙別對照表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/Scripts/MachinePaperType.js"></script>
}

@{
    IEnumerable<SelectListItem> Organization_code = (IEnumerable<SelectListItem>)ViewBag.Organization_code;
}
<div class="box box-primary customBody" style="padding:20px;">
    <table style=" border-spacing:20px 5px">
        <tr>
            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    組織
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.MachinePaperType.Organization_code, Organization_code, new { @class = "customDropDownList", id = "Organization_code", autocomplete = "off" })</td>
        </tr>
        <tr>
            <td class="input-lg" colspan="2" style="padding-left: 0px; text-align: right;">
                <button type="button" id="btnSearch" class="btn btn-primary externalBtn" style="width: 100px;">查詢</button>
            </td>
        </tr>
    </table>
</div>

<div class="box box-primary customBody" >
    <div class="box-body">
        <div class="row row-std">
            <div class="col-md-11" style="overflow: auto; margin:20px;">
                <table class="table table-striped table-bordered dataTable" id="MachinePaperTypeTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("機台紙別代碼")
                            </th>
                            <th>
                                @Html.DisplayName("機台紙別意義")
                            </th>
                            <th>
                                @Html.DisplayName("機台紙別摘要")
                            </th>
                            <th>
                                @Html.DisplayName("紙別")
                            </th>
                            <th>
                                @Html.DisplayName("機台")
                            </th>
                            <th>
                                @Html.DisplayName("供應商編號")
                            </th>
                            <th>
                                @Html.DisplayName("供應商名稱")
                            </th>
                            <th>
                                @Html.DisplayName("建立人員ID")
                            </th>
                            <th>
                                @Html.DisplayName("建立日期")
                            </th>
                            <th>
                                @Html.DisplayName("最後更新人員ID")
                            </th>
                            <th>
                                @Html.DisplayName("最後更新日期")
                            </th>

                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
