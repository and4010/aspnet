<div class="row row-std customBody">
    <div class="col-md-12 form-inline">
        <div class="form-group col col-md-4">
            @Html.LabelFor(model => model.SelectedMiscellaneous, new { @class = "input-lg" })
            @Html.DropDownListFor(model => model.SelectedMiscellaneous, Model.MiscellaneousItems, new { @class = "customDropDownList", id = "ddlMiscellaneous", autocomplete = "off" })
        </div>
    </div>
</div>


<div class="customBody" style="padding: 15px;">
