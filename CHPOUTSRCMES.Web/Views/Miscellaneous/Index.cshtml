                    @*<span id="qtyType" class="input-group-addon" style="width: 53px;">數量</span>*@
                    @Html.TextBoxFor(model => model.Qty, new { @class = "customTextBox", id = "txtQty", style = "width: 120px;", autocomplete = "off" })
