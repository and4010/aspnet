@model CHPOUTSRCMES.Web.ViewModels.Miscellaneous.MiscellaneousViewModel
@{
    ViewBag.Title = "雜項異動";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/bower_components/dataTables-select/css/select.dataTables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/bower_components/editor/css/scss/editor.dataTables.min.css")" rel="stylesheet" type="text/css" />

@section scripts {
    <script src="~/Scripts/Miscellaneous/Miscellaneous.js"></script>
    @*<script src="~/Scripts/Miscellaneous/MiscellaneousReceive.js"></script>
        <script src="~/Scripts/Miscellaneous/MiscellaneousSend.js"></script>*@
    <script src="~/Scripts/StockTransaction/Top.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/label.js"></script>
}


<div class="row row-std">
    <div class="col-md-12 form-inline">
        <div class="form-group col col-md-4">
            @Html.LabelFor(model => model.SelectedMiscellaneous, new { @class = "input-lg" })
            @Html.DropDownListFor(model => model.SelectedMiscellaneous, Model.MiscellaneousItems, new { @class = "form-control", id = "ddlMiscellaneous", autocomplete = "off" })
        </div>
    </div>
</div>


<div style="padding: 15px;">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="fa fa-caret-right box-title">庫存查詢</h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        @*<div class="row col-md-12">
                <h4 class="page-header">庫存查詢</h4>
            </div>*@
        <div class="box-body with-border">
            <div id="Top">
            </div>


            @*<div id="Content">
                </div>*@


            <div class="row row-std col-md-12 form-inline">
                <div class="input-group col-md-3">
                    <span class="input-group-addon" style="width: 53px;">數量</span>
                    @Html.TextBoxFor(model => model.SearchQty, new { @class = "form-control", id = "txtSearchQty", placeholder = "請輸入數量", autocomplete = "off" })
                    @*<input class="form-control" type="text" id="txtSearchQty" placeholder="請輸入數量" />*@
                </div>
                <span id="SearchUnit">@Html.DisplayFor(model => model.SearchUnit)</span>

            </div>

            <div class="row row-std col-md-12 form-inline">
                <div class="input-group col-md-3">
                    <span class="input-group-addon" style="width: 53px;">誤差百分比</span>
                    @Html.TextBoxFor(model => model.PercentageError, new { @class = "form-control", id = "txtPercentageError", placeholder = "請輸入百分比", autocomplete = "off" })
                    @*<input class="form-control" type="text" id="txtPercentageError" placeholder="請輸入百分比" />*@
                </div>
                <span>%</span>
            </div>

            <div class="row row-std col-md-12">
                <input type="button" id="btnSearchStock" value="查詢" class="btn btn-primary" />
            </div>


            <div class="row row-std">
                <div class="col-sm-12 col-md-12">
                    <table class="table table-striped table-bordered table-hover" id="StockDT">
                        <thead>
                            <tr>
                                <th rowspan="2" colspan="1"></th>
                                <th rowspan="2" colspan="1">項次</th>
                                <th rowspan="2" colspan="1">倉庫</th>
                                <th rowspan="2" colspan="1">儲位</th>
                                <th rowspan="2" colspan="1">料號</th>
                                <th rowspan="2" colspan="1">條碼號</th>
                                <th rowspan="1" colspan="2">主單位</th>
                                <th rowspan="1" colspan="2">次單位</th>
                                <th rowspan="2" colspan="1">備註</th>
                            </tr>
                            <tr>
                                @*<th>
                                    </th>*@
                                @*<th>
                                        @Html.DisplayName("項次")
                                    </th>
                                    <th>
                                        @Html.DisplayName("倉庫")
                                    </th>
                                    <th>
                                        @Html.DisplayName("儲位")
                                    </th>
                                    <th>
                                        @Html.DisplayName("料號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("條碼號")
                                    </th>*@
                                <th>
                                    @Html.DisplayName("數量")
                                </th>
                                <th>
                                    @Html.DisplayName("單位")
                                </th>
                                <th>
                                    @Html.DisplayName("數量")
                                </th>
                                <th>
                                    @Html.DisplayName("單位")
                                </th>
                            </tr>
                        </thead>

                    </table>

                </div>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="fa fa-caret-right box-title">庫存查詢</h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>

        @*<div class="row col-md-12">
                <h4 class="page-header">異動明細</h4>
            </div>*@
        <div class="box-body with-border">
            <div class="row row-std ">
                <div class="col-md-12">
                    <div class="col col-md-2 input-lg form-group">
                        <span id="StockId" style="display: none;"></span>
                        @Html.LabelFor(model => model.SUB_ID, new { @class = "input-lg" })
                        <span id="SUB_ID">@Html.DisplayFor(model => model.SUB_ID)</span>
                    </div>
                    <div class="col col-md-3 input-lg form-group">
                        @Html.LabelFor(model => model.Subinventory, new { @class = "input-lg" })
                        <span id="Subinventory">@Html.DisplayFor(model => model.Subinventory)</span>
                    </div>
                    <div class="col col-md-3 input-lg form-group">
                        @Html.LabelFor(model => model.Locator, new { @class = "input-lg" })
                        <span id="Locator">@Html.DisplayFor(model => model.Locator)</span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col col-md-4 input-lg form-group">
                        @Html.LabelFor(model => model.ItemNumber, new { @class = "input-lg" })
                        <span id="ItemNumber">@Html.DisplayFor(model => model.ItemNumber)</span>
                    </div>
                    <div class="col col-md-3 input-lg form-group">
                        @Html.LabelFor(model => model.Barcode, new { @class = "input-lg" })
                        <span id="Barcode">@Html.DisplayFor(model => model.Barcode)</span>
                    </div>
                </div>
            </div>

            <div class="row row-std col-md-12 form-inline">
                <div class="input-group col-md-3">
                    <span id="qtyType" class="input-group-addon" style="width: 53px;">數量</span>
                    @Html.TextBoxFor(model => model.Qty, new { @class = "form-control", id = "txtQty", placeholder = "請輸入數量", autocomplete = "off" })
                    @*<input class="form-control" type="text" id="txtQty" placeholder="請輸入數量" />*@
                </div>
                <span id="TransactionUnit">@Html.DisplayFor(model => model.TransactionUnit)</span>

                <div class="input-group col-md-3">
                    <span class="input-group-addon" style="width: 53px;">備註</span>
                    @Html.TextBoxFor(model => model.Note, new { @class = "form-control", id = "txtNote", placeholder = "請輸入備註", autocomplete = "off" })
                </div>
                <input type="button" id="btnAddRecord" value="新增" class="btn btn-danger" />
            </div>

            <div class="row row-std col-md-12">
                <input type="button" id="btnSaveTransaction" value="異動存檔" class="btn btn-danger" />
            </div>

            <div class="row row-std">
                <div class="col-sm-12 col-md-12">
                    <table class="table table-striped table-bordered table-hover" id="TransactionDetailDT">
                        <thead>
                            <tr>
                                <th rowspan="2" colspan="1"></th>
                                <th rowspan="2" colspan="1">項次</th>
                                <th rowspan="2" colspan="1">倉庫</th>
                                <th rowspan="2" colspan="1">儲位</th>
                                <th rowspan="2" colspan="1">料號</th>
                                <th rowspan="2" colspan="1">條碼號</th>
                                <th rowspan="1" colspan="3">主單位</th>
                                <th rowspan="1" colspan="3">次單位</th>
                                <th rowspan="2" colspan="1">備註</th>
                            </tr>
                            <tr>
                                @*<th>
                                    </th>*@
                                @*<th>
                                        @Html.DisplayName("項次")
                                    </th>
                                    <th>
                                        @Html.DisplayName("倉庫")
                                    </th>
                                    <th>
                                        @Html.DisplayName("儲位")
                                    </th>
                                    <th>
                                        @Html.DisplayName("料號")
                                    </th>
                                    <th>
                                        @Html.DisplayName("條碼號")
                                    </th>*@
                                <th>
                                    @Html.DisplayName("異動量")
                                </th>
                                <th>
                                    @Html.DisplayName("異動後")
                                </th>
                                <th>
                                    @Html.DisplayName("單位")
                                </th>
                                <th>
                                    @Html.DisplayName("異動量")
                                </th>
                                <th>
                                    @Html.DisplayName("異動後")
                                </th>
                                <th>
                                    @Html.DisplayName("單位")
                                </th>
                            </tr>
                        </thead>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>