@model CHPOUTSRCMES.Web.ViewModels.OrgSubinventoryViewModel
@{
    ViewBag.Title = "組織倉庫";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/Scripts/OrgSubinventory.js"></script>
    <script src="~/Scripts/moment.js"></script>
}

<div class="box box-primary customBody" style="padding:20px;">
    <table style=" border-spacing:20px 5px">
        <tr>
            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    組織
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.SelectedOrganization, Model.OrganizationNameItems, new { @class = "customDropDownList", id = "ddlOrganization", autocomplete = "off" })</td>

            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    倉庫
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.SelectedSubinventory, Model.SubinventoryNameItems, new { @class = "customDropDownList", id = "ddlSubinventory", autocomplete = "off" })</td>
            <td style="text-align: right;">
                <label style='font-weight:bolder;'>
                    儲位
                </label>
            </td>
            <td class="input-lg">@Html.DropDownListFor(model => model.SelectedLocator, Model.LocatorNameItems, new { @class = "customDropDownList", id = "ddlLocator", autocomplete = "off" })</td>
        </tr>
        <tr>
            <td class="input-lg" colspan="6" style=" text-align: right;">
                <button type="button" id="btnSearch" class="btn btn-primary externalBtn" style="width: 100px;">查詢</button>
            </td>
        </tr>
    </table>

   
</div>

<div class="box box-primary customBody" style="padding:20px; overflow:auto">
    <div class="box-body">
        <div class="row row-std">
            <div class="col-sm-10 col-md-10 ">
                <table class="table table-striped table-bordered table-hover dataTable" id="OrgSubinventoryDataTablesBody">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("庫存組織")
                            </th>
                            <th>
                                @Html.DisplayName("庫存組織名稱")
                            </th>
                            <th>
                                @Html.DisplayName("倉庫")
                            </th>
                            <th>
                                @Html.DisplayName("倉庫名稱")
                            </th>
                            <th>
                                @Html.DisplayName("加工廠")
                            </th>
                            <th>
                                @Html.DisplayName("儲位節段")
                            </th>
                            <th>
                                @Html.DisplayName("儲位描述")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


