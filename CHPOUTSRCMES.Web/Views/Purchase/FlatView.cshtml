@model CHPOUTSRCMES.Web.ViewModels.Purchase.PurchaseViewModel


@{
    ViewBag.EnableReturnButton = "true";
    ViewBag.Title = "檢視明細(平張)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/photo.css")" rel="stylesheet" type="text/css" />

@section scripts {

    <script src="~/Scripts/Purchase/View.js"></script>
}
@Html.HiddenFor(model => model.FlatDetailModel.Id, new { id = "Id" })


<div class="row row-std customBody">
    <div class="col-md-12">


        <div class="box box-success">
            <div class="box-body">

                <div class="col-md-12">
                    <div class="col-md-1 text-right">
                        @Html.LabelFor(model => model.CabinetNumber)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(model => model.CabinetNumber)
                    </div>
                    <div class="col-md-1 text-right">
                        @Html.LabelFor(model => model.FlatDetailModel.Item_No)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(model => model.FlatDetailModel.Item_No)
                    </div>
                    <div class="col-md-1 text-right">
                        @Html.LabelFor(model => model.FlatDetailModel.ReamWeight)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(model => model.FlatDetailModel.ReamWeight)
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="col-md-1 text-right">
                        @Html.LabelFor(model => model.FlatDetailModel.Pieces_Qty)
                    </div>

                    <div class="col-md-2">
                        @Html.DisplayFor(model => model.FlatDetailModel.Pieces_Qty)
                    </div>

                    <div class="col-md-1 text-right">
                        @Html.LabelFor(model => model.FlatDetailModel.Barcode)
                    </div>

                    <div class="col-md-2">
                        @Html.DisplayFor(model => model.FlatDetailModel.Barcode)
                    </div>

                    <div class="col-md-1 text-right">
                        @Html.LabelFor(model => model.FlatDetailModel.Qty)
                    </div>

                    <div class="col-md-2">
                        @Html.DisplayFor(model => model.FlatDetailModel.Qty)
                    </div>

                    <div class="col-md-1 text-right">
                        @Html.LabelFor(model => model.FlatDetailModel.Locator)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(model => model.FlatDetailModel.Locator)
                    </div>

                </div>


                <div class="col-md-12" style="margin-top:30px">

                    <h4 class="page-header">
                        <label>備註</label>
                    </h4>

                    <div class="col-md-12">
                        <div class="col-md-12" style="min-height:60px;">
                            @Html.DisplayFor(model => model.FlatDetailModel.Reason) @Html.DisplayFor(model => model.FlatDetailModel.Remark)
                        </div>
                        <div class="col-md-3">
                            人員：@Html.DisplayFor(model => model.FlatDetailModel.CreatedUserName)
                        </div>
                        <div class="col-md-3">
                            時間：@Html.DisplayFor(model => model.FlatDetailModel.CreationDate)
                        </div>
                    </div>

                </div>



                <div class="col-md-12" style="margin-top:30px">
                    <h4 class="page-header">
                        <label>照片</label>
                    </h4>

                    <div class="col-md-5" id="saveBox">

                    </div>
                </div>



            </div>

        </div>



    </div>


</div>

