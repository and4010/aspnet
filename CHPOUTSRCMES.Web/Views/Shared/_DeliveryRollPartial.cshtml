@model CHPOUTSRCMES.Web.ViewModels.Delivery.PaperRollEditViewModel


<div class="form-group col col-md-12 input-lg">
    @Html.Label("揀貨(刷條碼)")
</div>

<div class="row row-std">
    <div class="form-inline ">
        <div class="form-group col col-md-1 input-lg">
            @Html.LabelFor(model => model.PaperRollEditDT_ID, new { @class = "input-lg" })
            <span id="PaperRollEditDT_ID">@Html.DisplayFor(model => model.PaperRollEditDT_ID)</span>
        </div>
        <div class="form-group col col-md-2 input-lg">
            @Html.LabelFor(model => model.ORDER_NUMBER, new { @class = "input-lg" })
            <span id="ORDER_NUMBER">@Html.DisplayFor(model => model.ORDER_NUMBER)</span>
        </div>
        <div class="form-group col col-md-2 input-lg">
            @Html.LabelFor(model => model.ORDER_SHIP_NUMBER, new { @class = "input-lg" })
            <span id="ORDER_SHIP_NUMBER">@Html.DisplayFor(model => model.ORDER_SHIP_NUMBER)</span>
        </div>
        <div class="form-group col col-md-2 input-lg">
            @Html.LabelFor(model => model.ITEM_DESCRIPTION, new { @class = "input-lg" })
            <span id="ITEM_DESCRIPTION">@Html.DisplayFor(model => model.ITEM_DESCRIPTION)</span>
        </div>

    </div>

    <div class="form-inline">
        <div class="form-group col col-md-12 input-lg">
            @Html.LabelFor(model => model.BARCODE, new { @class = "input-lg" })
            @Html.TextBoxFor(model => model.BARCODE, new { @class = "form-control input-sm", id = "txtBARCODE", aria_describedby = "txtBARCODE-addon" })
            <button id="btnSaveBarcode" class="btn btn-success externalBtn">新增</button>

        </div>
    </div>
</div>
<br />
<div class="row row-std">
    <div class="dataTable_wrapper">
        <div class="col-sm-12 col-md-12">
            <table class="table table-striped table-bordered table-hover" id="PaperRollBarcodeDataTablesBody">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayName("項次")
                        </th>
                        <th>
                            @Html.DisplayName("料號名稱")
                        </th>
                        <th>
                            @Html.DisplayName("條碼號")
                        </th>
                        <th>
                            @Html.DisplayName("數量")
                        </th>
                        <th>
                            @Html.DisplayName("單位")
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

