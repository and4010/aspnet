@model CHPOUTSRCMES.Web.ViewModels.SoaQuery.SoaQueryViewModel

@{
    ViewBag.Title = "SOA傳輸記錄";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/Scripts/SoaQuery.js"></script>
    <script src="~/Scripts/moment.js"></script>
}
<div class="customBody row">
    <div class="col col-md-10">
        <div class="box box-primary" style="padding:10px 20px;">
            @using (Html.BeginForm("SoaQuery", "Soa", FormMethod.Post, new { @id = "QueryForm", role = "form" }))
            {
                @Html.AntiForgeryToken()
            <table style=" border-spacing:20px 5px">
                <tr>
                    <td style="text-align: right;">
                        <label style='font-weight:bolder;'>
                            類型
                        </label>
                    </td>
                    <td class="input-lg" style='width: 100px'>@Html.DropDownListFor(model => model.ProcessCodeList, Model.ProcessCodeList, new { @class = "customDropDownList", id = "ProcessCodeList", autocomplete = "off" })</td>
                    <td style="text-align: right;">
                        <label style='font-weight:bolder;'>
                            日期
                        </label>
                    </td>
                    <td class="input-lg">
                        <input class="customTextBox" type="text" id="ProcessDate" tabindex="3" style="width:100px;" autocomplete="off" />
                    </td>
                    <td style="text-align: right;">
                        <label style='font-weight:bolder;'>
                            錯誤
                        </label>
                    </td>
                    <td class="input-lg">@Html.DropDownListFor(model => model.ErrorOptionList, Model.ErrorOptionList, new { @class = "customDropDownList", id = "ErrorOptionList", autocomplete = "off" })</td>
                </tr>
                <tr>
                    <td class="input-lg" colspan="6" style=" text-align: right;">
                        <button type="button" id="btnSearch" class="btn btn-primary externalBtn" style="width: 100px;">查詢</button>
                    </td>
                </tr>
            </table>


                @*<div class="row row-std">

                    <div class="col-md-1 text-right">
                        <label class="input-lg">類型</label>
                    </div>

                    <div class="col-md-3">
                        @Html.DropDownListFor(model => model.ProcessCodeList, Model.ProcessCodeList, new { @class = "form-control input-lg", id = "ProcessCodeList", autocomplete = "off" })
                    </div>

                    <div class="col col-md-1 text-right">
                        <label class="input-lg">日期</label>
                    </div>
                    <div class="col col-md-2">
                        <input type="text" id="ProcessDate" class="form-control input-lg" />
                    </div>

                    <div class="col col-md-1 text-right">
                        <label class="input-lg">錯誤</label>
                    </div>

                    <div class="col-md-2">
                        @Html.DropDownListFor(model => model.ErrorOptionList, Model.ErrorOptionList, new { @class = "form-control input-lg", id = "ErrorOptionList", autocomplete = "off" })
                    </div>

                </div>*@

            }


            @*<div class="box-footer">
                <div class="row row-mtd">
                    <div class="btn-group col-md-3 col-lg">
                        <button id="btnSearch" class="btn btn-primary externalBtn" style="min-width:200px;">查詢</button>
                    </div>
                </div>
            </div>*@
        </div>
        <div class="box box-primary">
            <div class="box-body" style="overflow:auto;padding:20px;">
                <div class="row row-std">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered dataTable" id="QueryTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.ProcessName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.ProcessDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.BatchId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.RowNum)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.StatusCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.ErrorMsg)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.SoaPullingFlag)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.SoaErrorMsg)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fields.SoaProcessCode)
                                    </th>
                                </tr>
                            </thead>

                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
